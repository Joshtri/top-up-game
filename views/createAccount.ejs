<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="icon" href="/img/delta_store.png" />

</head>
<body data-bs-theme="dark">
    <%-include('layouts');%>

    <style>
        .hidden{
            display: none;
        }
    </style>

<style>
    /* Animasi */
    @keyframes pointDown {
      0%, 100% {
        transform: translateY(0); /* Awal dan akhir: tidak bergerak */
      }
      50% {
        transform: translateY(5px); /* Tengah: pindah ke bawah */
      }
    }
  
    /* Menetapkan animasi ke emoji */
    .pointing-down {
      display: inline-block;
      animation: pointDown 1s ease-in-out infinite; /* Menggunakan animasi pointDown */
    }
  </style>

    <div class="container" style="padding-top: 60px;">

        <div class="col-lg-12">

            <div class="col-lg-3 mb-4 pb-2 pt-2">
                <h5 class=""></h5>
                
                <ul class="list-group list-group-horizontal">
                    <button type="button" id="menu-login" class="list-group-item list-group-item-action active">Log In</button>
                    <button type="button" id="menu-signup" class="list-group-item list-group-item-action">Sign Up</button>
                </ul>

            </div>
            
            <section id="login-container">
                <div class="fw-light mb-1">Log In</div>
                <form action="/login" method="POST">
                    <div class="row">
                        <div class="col-md-12">
                            <h4><span class="pointing-down">ðŸ‘‡</span>Gunakan E-Mail & password<span class="pointing-down">ðŸ‘‡</span></h4>
                            <hr>

                            <div class="mb-3 row">
                                <label for="" class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                                    <input type="email" name="email" class="form-control" required>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="" class="col-sm-2 col-form-label">password</label>
                                <div class="col-sm-10">
                                    <input type="text" name="password" class="form-control" required>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Log In</button>
                                </div>
                            </div>
                            
                            <div class="mb-3 row">
                                <label for="" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <a href="" class="link-info">Forgot your password ?</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </section>

            <section id="signup-container" class="hidden">
                <div class="fw-light mb-1">Sign Up</div>
                <form action="/post_createAccount" method="POST">
                    <div class="row">
                        <div class="col-md-12">
                            <h4><span class="pointing-down">ðŸ‘‡</span>Buat Akun Delta Store <span class="pointing-down">ðŸ‘‡</span></h4> 
                            <hr>
                            
                            <div class="mb-3 row">
                                <label for="" class="col-sm-2 col-form-label">E-Mail</label>
                                <div class="col-sm-10">
                                    <input type="email" name="email" class="form-control" required placeholder="E-Mail Anda">
                                    <small class="text-danger">*) gunakan alamat email yang aktif</small>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="" class="col-sm-2 col-form-label">Nama</label>
                                <div class="col-sm-10">
                                    <input type="text" name="name" class="form-control" required placeholder="Nama Anda">
                                    <small class="text-danger">*) bagian ini harus diisi</small>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label for="" class="col-sm-2 col-form-label">Password</label>
                                <div class="col-sm-10">
                                    <input type="text" name="password" class="form-control" required placeholder="Kata Sandi Anda Disini">
                                </div>
                            </div>



                            <div class="mb-3 row">
                                <label for="" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Create Account</button>
                                </div>
                            </div>
                            
                            <div class="mb-3 row">
                                <label for="" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <a href="" class="link-info">Forgot your password ?</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
<!-- Script JavaScript -->
<script>
    // Ambil tombol "Masuk"
    const masukButton = document.getElementById("masukButton");

    // Tambahkan event listener untuk menangani klik pada tombol "Masuk"
    masukButton.addEventListener("click", function(event) {
        // Hentikan peristiwa bawaan (modal tidak akan muncul)
        event.preventDefault();
        
        // Arahkan pengguna ke halaman pendaftaran
        window.location.href = "/sign-up";
    });
</script>
    <!-- Vendor JS Files -->
  <script src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <script>
    //membuat function untuk menghapus classlist hidden dan mengaktifkan hidden serta active

    /*
    Asumsi tiap content signup dan login memiliki container sendiri sebagai id. 
    */
    function showSignUp(){
        // remove dan add kelas hidden secara timbal balik.
        document.getElementById("signup-container").classList.remove("hidden")

        //  add kelas hidden di login-container section karena mengklik menu signup..
        document.getElementById("login-container").classList.add("hidden")



        //add dan remove class active secara timbal balik juga asumsinya.
        document.getElementById("menu-signup").classList.add("active");
        document.getElementById("menu-login").classList.remove("active");
    }

    function showLogin(){

        //kebalikan dari signup function. 

        document.getElementById("login-container").classList.remove("hidden");
        document.getElementById("signup-container").classList.add("hidden");

        document.getElementById("menu-signup").classList.remove("active");
        document.getElementById("menu-login").classList.add("active");

    }

    // $(document)
  </script>


    <script>

    // Event listener untuk menangkap klik pada menu Sign Up.
    document.addEventListener("DOMContentLoaded", function(){

        document.getElementById("menu-signup").addEventListener("click", function (event) {
                event.preventDefault();
                showSignUp();
        });

        document.getElementById("menu-login").addEventListener("click", function (event) {
                event.preventDefault();
                showLogin();
        });
    });

    </script>
</body>
</html>